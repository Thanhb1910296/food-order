
<main class="d-flex">
    <section class="me-2">
        <%- include('../partials/sidebar') %>
    </section>
    <section class="flex-grow-1">
        <%- include('../partials/header') %>
        <article class="m-5">
            <h1 class="mb-5"><%= merchantInfo.name %></h1>
            <table class="table table-striped-columns">
                <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Name</th>
                      <th scope="col">Category</th>
                      <th scope="col">Price</th>
                      <th scope="col">Description</th>
                      <th scope="col">Image</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% productListOfMerchant.forEach((product, index)=> { %>
                        <tr>
                            <th scope="row"><%= index+1 %></th>
                            <td><%= product.name %></td>
                            <td><%= product.category %></td>
                            <td><%= product.price %></td>
                            <td><%= product.description %></td>
                            <td>
                               <a href="<%= product.images[0] %>" target="_blank" rel="noopener noreferrer"><button type="button" class="btn btn-outline-primary">View Images</button></a>  
                            </td>
                        </tr>
                    <% }) %>
                  </tbody>
            </table>
            <a href="/administrator"><button type="button" class="btn btn-primary">Back</button></a>
        </article>
        <%- include('../partials/footer') %>
    </section>
    
</main>