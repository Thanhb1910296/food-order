
<main class="d-flex">
    <section class="me-2  border-end border-1 border-primary">
        <%- include('../partials/sidebar') %>
    </section>
    <section class="flex-grow-1">
        <%- include('../partials/header') %>
        <article class="m-5">
            <h1 class="mb-5">Merchant Management</h1>
            <table class="table table-striped-columns">
                <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Name</th>
                      <th scope="col">Email</th>
                      <th scope="col">Address</th>
                      <th scope="col">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% merchantList.forEach((merchant, index)=> { %>
                        <tr>
                            <th scope="row"><%= index+1 %></th>
                            <td><%= merchant.name %></td>
                            <td><%= merchant.email %></td>
                            <td><%= merchant.address %></td>
                            <td>
                                <% if (merchant.type == "pre-merchant") { %>
                                    <a href="/administrator/approve/<%= merchant._id  %> "><button type="button" class="btn btn-outline-primary">Approve</button></a> 
                                <% } %>
                                <a href="/administrator/delete/<%= merchant._id  %> "><button type="button" class="btn btn-outline-danger">Delete</button></a> 
                            </td>
                        </tr>
                    <% }) %>
                  </tbody>
            </table>
        </article>
        

        <%- include('../partials/footer') %>
    </section>
    
</main>